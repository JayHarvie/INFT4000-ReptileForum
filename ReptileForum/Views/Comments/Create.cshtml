@model ReptileForum.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <!-- Heading -->
    <h4 class="text-center mb-4">Create Comment</h4>
    <hr />

    <!-- Center the form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Content Textarea -->
                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Your Comment</label>
                    <textarea asp-for="Content" class="form-control" placeholder="Write your comment here..." rows="4"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- Discussion Title (Read-only) -->
                <div class="mb-3">
                    <label class="form-label">Discussion Title</label>
                    <select asp-for="DiscussionId" class="form-control" asp-items="@(ViewData["DiscussionId"] as IEnumerable<SelectListItem>)" disabled></select>
                    <input type="hidden" asp-for="DiscussionId" />
                </div>

                <!-- Submit Button -->
                <div class="mb-3 text-center">
                    <input type="submit" value="Create Comment" class="btn btn-success w-100" />
                </div>
            </form>
        </div>
    </div>

    <!-- Back Link -->
    <div class="text-center mt-4">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Discussions</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
