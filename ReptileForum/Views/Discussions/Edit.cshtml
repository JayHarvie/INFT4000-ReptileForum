@model ReptileForum.Models.Discussion

@{
    ViewData["Title"] = "Edit Discussion";
}

<div class="container mt-4">
    <h1 class="display-4">Edit Discussion</h1>

    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="DiscussionId" />

                <!-- Title Field -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Content Field -->
                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <!-- Hidden Fields -->
                <div class="d-none">
                    <input asp-for="CreateDate" class="form-control" />
                    <input asp-for="ImageFilename" class="form-control" />
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <input type="submit" value="Save Changes" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-2">
        <a asp-action="Index" class="btn btn-secondary">Back to Discussions</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
