@model IEnumerable<ReptileForum.Models.Discussion>

@{
    ViewData["Title"] = "Discussions";
}

<div class="text-center mb-4">
    <h1 class="display-4">Discussions</h1>
    <p>Explore ongoing discussions and share your thoughts! 🦎</p>
</div>

<!-- Button to create a new discussion -->
<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success">Create New Discussion</a>
</div>

<!-- List discussions vertically -->
<div>
    @foreach (var discussion in Model)
    {
        <div class="card shadow-sm mb-4">
            <div class="row g-0">
                <div class="col-md-8">
                    <div class="card-body">
                        <a asp-action="Details" asp-route-id="@discussion.DiscussionId" class="text-decoration-none">
                            <h5 class="card-title mb-1" style="color: black;">@discussion.Title</h5>
                        </a>
                        <p class="card-text mb-2">💬 @discussion.Comments.Count</p>
                        <p class="card-text"><small class="text-muted">📅 @discussion.CreateDate.ToString("yyyy-MM-dd HH:mm")</small></p>
                    </div>
                </div>
                <div class="col-md-4 d-flex justify-content-end align-items-center">
                    @if (!string.IsNullOrEmpty(discussion.ImageFilename))
                    {
                        <img src="~/Images/@discussion.ImageFilename" class="img-fluid rounded-start" style="max-width: 100px; height: auto;" />
                    }
                </div>
            </div>
            <div class="card-footer d-flex justify-content-end">
                <div class="ml-auto">
                    <a asp-action="Edit" asp-route-id="@discussion.DiscussionId" class="btn btn-outline-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@discussion.DiscussionId" class="btn btn-outline-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
