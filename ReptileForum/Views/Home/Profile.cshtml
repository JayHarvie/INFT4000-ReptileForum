@{
    var user = (ReptileForum.Data.ApplicationUser)ViewData["User"];
    var discussions = (List<ReptileForum.Models.Discussion>)ViewData["Discussions"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- User Profile Image and Name -->
            <div class="d-flex justify-content-center mb-4">
                @if (user.ImageFilename != null)
                {
                    <img src="~/profile_img/@user.ImageFilename" class="img-thumbnail" />
                }
                <h2 class="align-self-center">@user.Name</h2>
            </div>

            <!-- User Discussions -->
            <h4 class="mb-3">Discussions Started</h4>
            <ul class="list-group mb-5">
                @foreach (var discussion in discussions)
                {
                    <li class="list-group-item">
                        <a asp-action="GetDiscussion" asp-route-id="@discussion.DiscussionId">@discussion.Title</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
